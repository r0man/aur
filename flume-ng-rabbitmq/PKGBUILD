pkgname=flume-ng-rabbitmq
pkgver=1.0
pkgrel=2
pkgdesc='Flume-NG RabbitMQ'
arch=('any')
url='https://github.com/jcustenborder/flume-ng-rabbitmq'
license=('Apache License')
depends=('java-environment')
makedepends=('java-environment>=6')
_pkgloc=usr/share

source=('git+https://github.com/jcustenborder/flume-ng-rabbitmq.git')

md5sums=('SKIP')

build() {
  cd $pkgname
  mvn package
}

package() {
  mkdir -p $pkgdir/usr/lib/flume-ng/plugins.d
  install -Dm644 $srcdir/flume-ng-rabbitmq/target/flume-rabbitmq-channel-1.0-SNAPSHOT.jar $pkgdir/usr/lib/flume-ng/plugins.d
}
