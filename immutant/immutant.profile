# Home of Immutant
export JBOSS_HOME=/usr/share/immutant/jboss

# Application server mode
export JBOSS_AS_MODE=standalone

# Configuration file
export JBOSS_CONFIG=standalone.xml

# AS user
export JBOSS_USER=immutant

# PID file
export JBOSS_PIDFILE=/run/immutant/immutant.pid

# Console log
export JBOSS_CONSOLE_LOG=/var/log/immutant/console.log

# Run in background
export LAUNCH_JBOSS_IN_BACKGROUND=1
